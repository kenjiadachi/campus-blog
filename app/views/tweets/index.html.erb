  <%= render 'header' %>

  <div id="main">
    <%= image_tag 'main-img.jpg' %>
  </div>

  <div id="article_wrap">
    <div id="article_list">
      <div>
        <% @tweets.each do |tweet| %>
          <h2><%= link_to "#{tweet.title}", "/tweets/#{tweet.id}", method: :get %></h2>
          <p><%= tweet.created_at.strftime("%Y/%m/%d") %></p>
          <% if user_signed_in? %>
            <p>
              <%= link_to "編集", "/tweets/#{tweet.id}/edit", method: :get %>
              <%= link_to "削除", "/tweets/#{tweet.id}", method: :delete %>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= render 'sidebar' %>
    <div class="clear"></div>
  </div>

  <%= render 'footer' %>
